<!-- res/drawable/edit_text_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Góc bo tròn cho EditText -->
    <corners android:radius="8dp" />

    <!-- Màu nền của EditText -->
    <solid android:color="#FFFFFF" /> <!-- Màu trắng -->

    <!-- Đường viền của EditText -->
    <stroke
        android:width="2dp"
        android:color="#D3D3D3" /> <!-- Màu xám nhạt cho viền -->

    <!-- Padding bên trong EditText -->
    <padding
        android:left="10dp"
        android:right="10dp" />
</shape>