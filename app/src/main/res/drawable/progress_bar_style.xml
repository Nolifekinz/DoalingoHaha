<!-- res/drawable/progress_bar_style.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Nền của thanh tiến trình (màu xám nhạt) -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="#D3D3D3" /> <!-- Màu xám nhạt -->
        </shape>
    </item>

    <!-- Thanh tiến trình (màu cam) -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="8dp" />
                <solid android:color="#FFA500" /> <!-- Màu cam -->
            </shape>
        </clip>
    </item>
</layer-list>