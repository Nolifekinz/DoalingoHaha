<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TestOrNo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestOrNo">


    <Button
        android:id="@+id/btnGotoTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="152dp"
        android:text="Đi đến Kiểm tra"
        android:fontFamily="@font/duolingo_fontfamily"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNameApp" />

    <Button
        android:id="@+id/btnGotoMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tôi muốn học từ đầu"
        android:fontFamily="@font/duolingo_fontfamily"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGotoTest"
        app:layout_constraintVertical_bias="0.231"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/tvNameApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="Duolingo"
        android:textSize="50dp"
        android:fontFamily="@font/duolingo_fontfamily"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>