<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TestOrNo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkorchid"
    tools:context=".TestOrNo">


    <Button
        android:id="@+id/btnGotoTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="252dp"
        android:fontFamily="@font/duolingo_medium"
        android:text="Đi đến Kiểm tra"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNameApp" />

    <Button
        android:id="@+id/btnGotoMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/duolingo_medium"
        android:text="Tôi muốn học từ đầu"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGotoTest"
        app:layout_constraintVertical_bias="0.231"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/tvNameApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:fontFamily="@font/duolingo_medium"
        android:text="Duolingo"
        android:textAlignment="center"
        android:textColor="#E9E9E9"
        android:textSize="48sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="137dp"
        android:layout_height="146dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.362"
        app:srcCompat="@drawable/iconappne" />
</androidx.constraintlayout.widget.ConstraintLayout>