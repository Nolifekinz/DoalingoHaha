<!-- res/layout/activity_translate.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B2B2B"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginStart="20dp"
            android:background="@drawable/x_button"/>

        <ProgressBar
            android:id="@+id/progressBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="250dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:paddingStart="40dp"
            android:progress="50"
            android:progressDrawable="@drawable/progress_bar_style"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/translatePrompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/progressBar"
            android:layout_marginTop="20dp"
            android:text="Dịch câu này"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="64dp" />

        <TextView
            android:id="@+id/originalText"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/translatePrompt"
            android:layout_marginTop="20dp"
            android:text="Cô bé đó rất thân thiện."
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="98dp" />

        <EditText
            android:id="@+id/answerInput"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/originalText"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text_background"
            android:hint="Nhập câu trả lời của bạn"
            android:padding="12dp"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="293dp" />
    </LinearLayout>

    <Button
        android:id="@+id/checkBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/answerInput"
        android:layout_marginTop="20dp"
        android:backgroundTint="#A3D70A"
        android:text="KIỂM TRA"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="638dp" />

</LinearLayout>