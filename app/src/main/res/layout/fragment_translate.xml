<!-- fragment_translate.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B2B2B"
    android:orientation="vertical">

    <!-- Nội dung câu hỏi dịch câu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <ImageButton
            android:id="@+id/btnback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/x_button"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"/>

        <ProgressBar
            android:id="@+id/progressBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="250dp"
            android:layout_height="8dp"
            android:layout_gravity="center"
            android:progress="50"
            android:progressDrawable="@drawable/progress_bar_style"
            android:paddingStart="40dp"/>

    </LinearLayout>
    <TextView
        android:id="@+id/translateQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:fontFamily="@font/duolingo_fontfamily"
        android:layout_marginTop="20dp"
        android:text="Dịch câu này" />

    <TextView
        android:id="@+id/translateSentense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:fontFamily="@font/duolingo_fontfamily"
        android:layout_marginTop="20dp"
        android:text="This is a dog" />

    <EditText
        android:id="@+id/answerInput"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/originalText"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text_background"
        android:hint="Nhập câu trả lời của bạn"
        android:fontFamily="@font/duolingo_fontfamily"
        android:padding="12dp"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="293dp" />
    <Button
        android:id="@+id/checkAnswer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#A3D70A"
        android:text="KIỂM TRA"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="638dp" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#A3D70A"
        android:text="TIEP THEO"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="638dp"
        android:visibility="gone"/>
</LinearLayout>