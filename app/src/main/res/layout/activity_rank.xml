<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundapp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView2"
            android:layout_width="412dp"
            android:layout_height="85dp"
            android:background="@drawable/backgroundappbot"
            app:layout_constraintBottom_toTopOf="@+id/recyclerView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:menu="@menu/tarbar2" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="409dp"
            android:layout_height="143dp"
            android:background="@drawable/backgroundappbot"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="85dp">

            <ImageView
                android:id="@+id/imgrank1"
                android:layout_width="55dp"
                android:layout_height="61dp"
                app:srcCompat="@drawable/shield"
                tools:layout_editor_absoluteX="338dp"
                tools:layout_editor_absoluteY="16dp" />

            <ImageView
                android:id="@+id/imgrank2"
                android:layout_width="55dp"
                android:layout_height="61dp"
                app:srcCompat="@drawable/shield"
                tools:layout_editor_absoluteX="261dp"
                tools:layout_editor_absoluteY="16dp" />

            <ImageView
                android:id="@+id/imgrank3"
                android:layout_width="55dp"
                android:layout_height="61dp"
                app:srcCompat="@drawable/shield"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="55dp"
                android:layout_height="61dp"
                app:srcCompat="@drawable/shield"
                tools:layout_editor_absoluteX="94dp"
                tools:layout_editor_absoluteY="16dp" />

            <ImageView
                android:id="@+id/imgrank5"
                android:layout_width="55dp"
                android:layout_height="61dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.195"
                app:srcCompat="@drawable/shield" />

            <TextView
                android:id="@+id/textRank"
                android:layout_width="224dp"
                android:layout_height="31dp"
                android:text="Giải đấu kết thúc sau : ..."
                tools:layout_editor_absoluteX="92dp"
                tools:layout_editor_absoluteY="96dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="410dp"
            android:layout_height="422dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.737">

        </androidx.recyclerview.widget.RecyclerView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>