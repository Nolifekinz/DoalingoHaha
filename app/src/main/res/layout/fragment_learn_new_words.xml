<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/learnNewWords"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundappbot"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <ImageButton
            android:id="@+id/btnCloseVocabLearning"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

        <TextView
            android:id="@+id/titleOfVocabLearning"
            android:layout_width="356dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/duolingo_fontfamily"
            android:gravity="center"
            android:text=""
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtQuestionOfVocabLearning"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:fontFamily="@font/duolingo_medium"
        android:gravity="center_vertical"
        android:text="Chọn đáp án đúng :"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgOfWords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:srcCompat="@tools:sample/avatars"

        />

    <GridView
        android:layout_margin="10dp"
        android:id="@+id/gridViewOfVocabLearning"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/progress_exercice"
        android:gravity="center"
        android:horizontalSpacing="10dp"
        android:numColumns="2"
        android:paddingTop="50dp"
        android:paddingBottom="50dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/btnCheckOfVocabLearning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/duolingo_medium"
        android:text="KIỂM TRA"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnDoneLearnVocab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hoàn Thành"
        android:visibility="gone"/>

</LinearLayout>